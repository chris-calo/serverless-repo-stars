{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
